<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<VBox fx:controller="com.github.vedeshkin.RoadMap.sandbox.SandboxController"
      xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/8.0.211">
    <GridPane
            hgap="5"
            vgap="10">
        <padding>
            <Insets top="5" right="5" bottom="10" left="5"/>
        </padding>

        <Label text="City Name"
               GridPane.columnIndex="0"
               GridPane.rowIndex="0"
               alignment="BOTTOM_LEFT"
        />
        <TextField fx:id="cityName"
                   GridPane.columnIndex="1"
                   GridPane.rowIndex="0"
        />
        <Label text="Population"
               GridPane.columnIndex="0"
               GridPane.rowIndex="1"
               alignment="BOTTOM_LEFT"
        />
        <TextField fx:id="population"
                   GridPane.columnIndex="1"
                   GridPane.rowIndex="1"
        />
    </GridPane>
    <HBox spacing="5" alignment="CENTER_RIGHT">
        <padding>
            <Insets bottom="5" right="5"/>
        </padding>
        <Button fx:id="Save" text="Save"/>
        <Button fx:id="Cancel" text="Cancel"/>
    </HBox>


</VBox>
